# Strandly Backend Environment Configuration

# Server Configuration
PORT=5000
NODE_ENV=production
FRONTEND_URL=https://strandly.shop

# Database Configuration (PostgreSQL)
DATABASE_URL=postgresql://username:password@localhost:5432/strandly_db

# Stripe Payment Processing
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key  
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Resend Email Service
RESEND_API_KEY=re_your_resend_api_key

# JWT Secret (for future authentication)
JWT_SECRET=your-super-secure-jwt-secret

# Cors Origins (comma separated)
ALLOWED_ORIGINS=https://strandly.shop,https://dashboard.strandly.shop